<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.oxstone.googlenmtapplier.controller.MainFxController">
   <top>
      <MenuBar styleClass="btn" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="menuClose" mnemonicParsing="false" onAction="#clickMenuClose" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="menuAbout" mnemonicParsing="false" onAction="#clickMenuAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefWidth="200.0" styleClass="btn" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="tabSourceEditEnabler" styleClass="btn" text="Source File">
               <content>
                  <BorderPane prefWidth="200.0">
                     <center>
                        <AnchorPane fx:id="anchorSourceFile" prefHeight="59.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label fx:id="lblFolderPath" layoutX="24.0" layoutY="13.0" styleClass="lbl" text="Source sdlxliff">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Button fx:id="btnAdd" layoutX="484.0" layoutY="14.0" mnemonicParsing="false" onAction="#clickBtnAdd" prefHeight="23.0" prefWidth="39.0" text="+" />
                              <ListView fx:id="lstFiles" layoutX="24.0" layoutY="44.0" onDragDropped="#dragDroppedOnListFiles" onDragEntered="#dragEnteredOnListFiles" onDragExited="#dragExitedOnListFiles" onDragOver="#dragOverOnListFiles" prefHeight="133.0" prefWidth="546.0" />
                              <Button fx:id="btnDelete" layoutX="531.0" layoutY="14.0" mnemonicParsing="false" onAction="#clickBtnDelete" prefHeight="23.0" prefWidth="39.0" text="-" />
                           </children>
                        </AnchorPane>
                     </center>
                     <bottom>
                        <HBox alignment="CENTER" prefHeight="33.0" prefWidth="600.0" spacing="30.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="btnApplyNMT" mnemonicParsing="false" onAction="#clickBtnApplyNMT" styleClass="btn" text="Apply NMT" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </HBox>
                     </bottom>
                  </BorderPane>
               </content>
          </Tab>
            <Tab fx:id="tabSettings" styleClass="btn" text="Settings">
               <content>
                  <BorderPane prefWidth="200.0">
                     <center>
                        <AnchorPane prefHeight="188.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label fx:id="lblJsonPath" layoutX="24.0" layoutY="23.0" styleClass="lbl" text="Json Path">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtJsonPath" layoutX="147.0" layoutY="24.0" prefHeight="23.0" prefWidth="386.0" />
                              <Button fx:id="btnSearchJson" layoutX="539.0" layoutY="24.0" mnemonicParsing="false" onAction="#clickBtnSearchJson" text="..." />
                              <Label fx:id="lblProject" layoutX="24.0" layoutY="54.0" styleClass="lbl" text="Project">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtProject" layoutX="147.0" layoutY="54.0" prefHeight="23.0" prefWidth="386.0" />
                              <Label fx:id="lblModel" layoutX="24.0" layoutY="83.0" styleClass="lbl" text="Model">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtModel" layoutX="147.0" layoutY="83.0" prefHeight="23.0" prefWidth="386.0" />
                              <Label fx:id="lblLocation" layoutX="24.0" layoutY="112.0" styleClass="lbl" text="Location">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtLocation" layoutX="147.0" layoutY="112.0" prefHeight="23.0" prefWidth="386.0" />
                              <Label fx:id="lblGlossary" layoutX="24.0" layoutY="141.0" styleClass="lbl" text="Glopssary">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtGlossary" layoutX="147.0" layoutY="141.0" prefHeight="23.0" prefWidth="386.0" />
                           </children>
                        </AnchorPane>
                     </center>
                     <bottom>
                        <HBox alignment="CENTER" prefHeight="33.0" prefWidth="600.0" spacing="30.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="btnSaveSettings" mnemonicParsing="false" onAction="#clickBtnSaveSettings" styleClass="btn" text="Save" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </HBox>
                     </bottom>
                  </BorderPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
